[user]
    name = Jeffrey Shih
    email = 8042780+jshih7@users.noreply.github.com
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    ls = log --oneline
    ll = log --pretty=fuller
    logp = log -p
    st = status
    br = branch
    brr = branch --remote
    brm = branch -m
    co = checkout
    cob = checkout -b
    cp = cherry-pick
    cpa = cp --abort
    df = diff -w --color-words --color-moved
    dfc = diff --cached -w --color-words --color-moved
    dfs = dfc
    pull = pull --ff-only
    com = commit -m
    coma = commit --amend
    comr = commit --amend --reset-author
    comra = "!f() { \
            COMMIT_DATE="$(git log -n 1 --format=%aD)"; \
            GIT_COMMITTER_DATE=$COMMIT_DATE git commit --amend --reset-author --date=\"$COMMIT_DATE\"; \
        }; f"
    reb = rebase -i
    rebn = "!f() { \
            git rebase -i HEAD~$1; \
        }; f"
    rebc = rebase --continue
    reba = rebase --abort
    ref = reflog
    stashl = stash list
    stashp = "!f() { \
            git stash push -m "stash_name_$1"; \
        }; f"
    stasha = "!f() { \
            git stash apply $(git stash list | grep "stash_name_$1" | cut -d: -f1); \
        }; f"
[core]
    editor = /usr/bin/vim
[pager]
    branch = false
    tag = false
[includeIf "gitdir:~/haventech_dev/**"]
    path = ~/dotfiles/git/haventech/.gitconfig
